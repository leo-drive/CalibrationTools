<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="vehicle_id" default="default"/>

  <let name="sensor_model" value="test_sample_sensor_kit"/>
  <let name="parent_frame" value="sensor_kit_base_link"/>

  <!-- extrinsic_calibration_client -->
  <arg name="src_yaml" default="$(find-pkg-share individual_params)/config/$(var vehicle_id)/$(var sensor_model)/sensor_kit_calibration.yaml"/>
  <arg name="dst_yaml" default="$(env HOME)/sensor_kit_calibration.yaml"/>

  <node pkg="extrinsic_calibration_client" exec="extrinsic_calibration_client" name="extrinsic_calibration_client" output="screen">
    <param name="src_path" value="$(var src_yaml)"/>
    <param name="dst_path" value="$(var dst_yaml)"/>
  </node>

  <!-- extrinsic_calibration_manager -->
  <node pkg="extrinsic_calibration_manager" exec="extrinsic_calibration_manager" name="extrinsic_calibration_manager" output="screen">
    <param name="parent_frame" value="$(var parent_frame)"/>
    <param name="child_frames" value="
    [VLS128,
    VLP16_F,
    VLP16_FR,
    VLP16_FL,
    VLP16_MR,
    VLP16_ML,
    VLP16_BR,
    VLP16_BL]"/>
  </node>

  <!-- extrinsic_manual_calibrator -->
  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLS128"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLS128"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLP16_F"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLP16_F"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLP16_FR"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLP16_FR"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLP16_FL"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLP16_FL"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLP16_MR"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLP16_MR"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLP16_ML"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLP16_ML"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLP16_BR"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLP16_BR"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLP16_BL"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLP16_BL"/>
  </include>
</launch>
