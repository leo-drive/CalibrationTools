<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="vehicle_id" default="golf"/>

  <let name="sensor_model" value="golf_sensor_kit"/>
  <let name="parent_frame" value="sensor_kit_base_link"/>

  <!-- extrinsic_calibration_client -->
  <arg name="src_yaml" default="$(find-pkg-share individual_params)/config/$(var vehicle_id)/$(var sensor_model)/sensor_kit_calibration.yaml"/>
  <arg name="dst_yaml" default="$(env HOME)/sensor_kit_calibration.yaml"/>

  <node pkg="extrinsic_calibration_client" exec="extrinsic_calibration_client" name="extrinsic_calibration_client" output="screen">
    <param name="src_path" value="$(var src_yaml)"/>
    <param name="dst_path" value="$(var dst_yaml)"/>
  </node>

  <!-- extrinsic_calibration_manager -->
  <node pkg="extrinsic_calibration_manager" exec="extrinsic_calibration_manager" name="extrinsic_calibration_manager" output="screen">
    <param name="parent_frame" value="$(var parent_frame)"/>
    <param name="child_frames" value="
    [CAM_FR/camera_link,
    CAM_F/camera_link,
    CAM_FL/camera_link,
    CAM_MR/camera_link,
    CAM_ML/camera_link,
    CAM_BR/camera_link,
    CAM_BL/camera_link,
    CAM_B/camera_link,
    VLS128_TOP_base_link,
    VLP16_BL_base_link,
    VLP16_BR_base_link,
    VLP16_ML_base_link,
    VLP16_MR_base_link,
    VLP16_F_base_link]"/>
  </node>

  <!-- extrinsic_manual_calibrator -->
  <!-- camera -->
  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/CAM_FR/camera_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="CAM_FR/camera_link"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/CAM_F/camera_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="CAM_F/camera_link"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/CAM_FL/camera_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="CAM_FL/camera_link"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/CAM_MR/camera_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="CAM_MR/camera_link"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/CAM_ML/camera_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="CAM_ML/camera_link"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/CAM_BR/camera_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="CAM_BR/camera_link"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/CAM_BL/camera_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="CAM_BL/camera_link"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/CAM_B/camera_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="CAM_B/camera_link"/>
  </include>

  <!-- lidar -->
  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLS128_TOP_base_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLS128_TOP_base_link"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLP16_BL_base_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLP16_BL_base_link"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLP16_BR_base_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLP16_BR_base_link"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLP16_ML_base_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLP16_ML_base_link"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLP16_MR_base_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLP16_MR_base_link"/>
  </include>

  <include file="$(find-pkg-share extrinsic_manual_calibrator)/launch/calibrator.launch.xml">
    <arg name="ns" value="$(var parent_frame)/VLP16_F_base_link"/>
    <arg name="parent_frame" value="$(var parent_frame)"/>
    <arg name="child_frame" value="VLP16_F_base_link"/>
  </include>
</launch>
